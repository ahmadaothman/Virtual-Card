<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_transaction_layout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|start"
        android:maxLines="2"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="@color/disableColor" />

    <TextView
        android:id="@+id/txt_transaction_layout_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|start"
        android:maxLines="2"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="@color/disableColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_transaction_layout_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|start"
            android:maxLines="2"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/disableColor" />

        <TextView
            android:id="@+id/txt_transaction_layout_authCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|start"
            android:maxLines="2"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/disableColor" />

    </LinearLayout>

</LinearLayout>