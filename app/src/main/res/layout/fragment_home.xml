<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/home_card"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:visibility="visible"

            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/home_card_layout"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:background="@drawable/card_bg"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/text_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Credit Card"
                    android:textColor="#efefef"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/card_2" />

                <TextView
                    android:id="@+id/text_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:digits="01234 56789"
                    android:fontFamily="serif-monospace"
                    android:maxLength="19"
                    android:maxLines="1"
                    android:text="1234123412341234"
                    android:textColor="#efefef"
                    android:textSize="18sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/text_card_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="serif-monospace"
                    android:gravity="center|end"
                    android:text="11/20"
                    android:textColor="#efefef" />

                <TextView
                    android:id="@+id/text_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center|start"
                    android:text="Ahmad Ossman"
                    android:textColor="#efefef" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/colorFourth"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/btn_request_card"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorFourth"
                android:text="Request card"
                android:textColor="#ffffff" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/colorFourth"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/btn_top_up"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorFourth"
                android:text="TOP UP"
                android:textColor="#ffffff"
                android:visibility="gone" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>